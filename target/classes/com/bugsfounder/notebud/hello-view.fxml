<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.HBox?>
<VBox spacing="5" alignment="TOP_LEFT"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bugsfounder.notebud.NoteController">

    <Label fx:id="fileNameLabel"
           onMouseClicked="#onFileNameClicked"
           style="-fx-font-weight: bold; -fx-cursor: hand;"
           text="untitled.txt"/>

    <Label fx:id="filePathLabel"
           onMouseClicked="#copyFilePath"
           style="-fx-font-size: 11px; -fx-text-fill: gray; -fx-cursor: hand;"
           text="path"/>

    <TextArea fx:id="noteText" wrapText="true" prefHeight="200"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Pin" onAction="#pinNote"/>
        <Button text="Save" onAction="#saveNote"/>
        <Button text="New" onAction="#newNote"/>
        <Button text="Delete" onAction="#deleteNote"/>
    </HBox>

</VBox>
